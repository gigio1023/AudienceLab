{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AgentActionLog",
  "type": "object",
  "required": [
    "schemaVersion",
    "runId",
    "simulationId",
    "sequence",
    "timestamp",
    "agent",
    "action"
  ],
  "properties": {
    "schemaVersion": {"type": "string"},
    "runId": {"type": "string"},
    "simulationId": {"type": "string"},
    "sequence": {"type": "integer", "minimum": 1},
    "timestamp": {"type": "string"},
    "agent": {
      "type": "object",
      "required": ["id", "type", "personaId", "personaName"],
      "properties": {
        "id": {"type": "string"},
        "type": {"type": "string", "enum": ["hero", "crowd"]},
        "personaId": {"type": "string"},
        "personaName": {"type": "string"}
      }
    },
    "action": {
      "type": "object",
      "required": ["type", "status"],
      "properties": {
        "type": {"type": "string"},
        "status": {"type": "string", "enum": ["ok", "error", "skipped"]},
        "input": {"type": "object"},
        "output": {"type": "object"},
        "error": {"type": ["string", "object", "null"]}
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "path"],
        "properties": {
          "type": {"type": "string"},
          "path": {"type": "string"}
        }
      }
    }
  }
}
